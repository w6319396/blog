<!-- 分类管理 -->
<div role="tabpanel" class="tab-pane fade" id="Section3">
    <div class="tab-title">
        <h3>导航分类管理</h3>
        <a href="#" data-toggle="modal" data-target="#categoryModal" onclick="addCatrgory()">添加</a> </div>
    <!-- Modal -->
    <div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">导航分类添加</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <input type="hidden" id="id" value="">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">名称</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="name" placeholder="名称">
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">路径</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="path" placeholder="路径">
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">父分类</label>
                            <div class="col-sm-10">
                                <!--<input class="form-control" type="text" id="pid" placeholder="父分类">-->
                                <select class="form-control" name="" id="pid">
                                    <option value="">根分类</option>
                                    <% for(var i=0; i<categoryList.length; i++) {%>
                                    <option value="<%=categoryList[i]._id%>"><%=categoryList[i].name%></option>
                                    <% } %>
                                </select>
                            </div>

                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">排序值</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="sort" placeholder="排序值(只能为数字)">
                            </div>
                        </div>

                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">分类模板</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="template" placeholder="分类模板">
                            </div>
                        </div>

                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">是否在首页显示：</label>

                            <div class="col-sm-10">
                                <select class="form-control" name="" id="is_nav">
                                    <option value="1">是</option>
                                    <option value="2">否</option>
                                </select>
                            </div>

                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-danger" onclick="saveCategory()">保存</button>
                </div>
            </div>
        </div>
    </div>
    <table id="table">
        <thead>
        <tr>
            <th>名称</th>
            <th>路径</th>
            <th>父分类</th>
            <th>排序值</th>
            <th>前台是否显示</th>
            <th>系统分类</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody id="categoryList">

        </tbody>
    </table>
</div>